@model TP_PWEB.Models.RegisterViewModel
@{
    ViewBag.Title = "Registar";
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <br />
    <h5>Introduza os campos necessários.</h5>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div>
        <div id="div-user" style="float:left;width:50%;">

            <div class="form-group row">
                @Html.LabelFor(m => m.SelectedRole, new { @class = "col-md-3 control-label" })
                <div class="col-sm-5">
                    @Html.DropDownListFor(m => m.SelectedRole, Model.RegisterRoles, new { @class = "form-control", @id = "dropdown-role", @onchange = "roleChange()" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.NomeCompleto, new { @class = "col-md-3 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.NomeCompleto, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })
                <div class="col-sm-5">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })
                <div class="col-sm-5">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-3 control-label" })
                <div class="col-sm-5">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>

        </div>
        <div style="float:left;width:50%;">
            <div id="div-empresa">
                <div class="form-group row" visible="false">
                    @Html.LabelFor(m => m.NomeEmpresa, new { @class = "col-md-3 control-label" })
                    <div class="col-sm-5">
                        @Html.TextBoxFor(m => m.NomeEmpresa, new { title = "O campo Nome Empresa é necessário.", id = "nome-empresa", @class = "form-control" })
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-1 col-md-10">
            <br /><input type="submit" class="btn btn-primary" value="Criar nova conta" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript" src="~/Scripts/Register.js"></script>
}
