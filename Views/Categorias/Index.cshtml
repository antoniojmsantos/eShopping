@model IEnumerable<TP_PWEB.Models.Categoria>

@{
    ViewBag.Title = "Lista de Categorias";
}

<h2>Lista de Categorias</h2>

<p>
    @Html.ActionLink("Criar Nova", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCategoria)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCategoria)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdCategoria }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdCategoria }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.IdCategoria })
        </td>
    </tr>
}

</table>
