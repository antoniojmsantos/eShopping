@model IEnumerable<TP_PWEB.Models.ApplicationUser>

@{
    ViewBag.Title = "Funcionários";
}

<h3>Lista de Funcionários</h3>

<p>
    @Html.ActionLink("Registar Novo Funcionario", "RegistarFuncionario")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCompleto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCompleto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Detalhes", "DetalhesFuncionario", new { id = item.Id })
                @Html.ActionLink("Apagar", "ApagarFuncionario", new { id = item.Id })
            </td>
        </tr>
    }

</table>