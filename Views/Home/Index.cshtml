@model TP_PWEB.Models.HomeViewModel
@{
	ViewBag.Title = "eShopping - Página Inicial";
} 

<br />
<h3>
	<b>Oportunidades imperdíveis</b>
</h3>
<h5>
	Aproveite promoções únicas!
</h5>
<table class="table">
	<tr>
		<th>#</th>
		<th>@Html.DisplayNameFor(m => m.oportunidades[0].NomeProduto)</th>
		<th>@Html.DisplayNameFor(m => m.oportunidades[0].PrecoAntigo)</th>
		<th>@Html.DisplayNameFor(m => m.oportunidades[0].PrecoNovo)</th>
		<th>@Html.DisplayNameFor(m => m.oportunidades[0].Desconto)</th>
		<th></th>
	</tr>
	@{
		var n = 1;
	} 
	@foreach (var m in Model.oportunidades)
	{
		<tr>
			<td>
				@n
			</td>
			<td>
				@Html.DisplayFor(i => m.NomeProduto)
			</td>
			<td class="text-danger">
				<del>@Html.DisplayFor(i => m.PrecoAntigo)</del>
			</td>
			<td class="text-success">
				@Html.DisplayFor(i => m.PrecoNovo)
			</td>
			<td class="text-primary">
				- @Html.DisplayFor(i => m.Desconto) %
			</td>
			<td>
				@Html.ActionLink(
						linkText: "Ir",
						actionName: "Detalhes",
						controllerName: "Produtoes",
						routeValues: new
						{
							id = m.IdProduto
						},
						htmlAttributes: new
						{
							@class = "btn btn-primary"
						})
			</td>
		</tr>
		n++;
	}
</table>
<h3>
    <b>Tendências</b>
</h3>
<h5>
	Descubra os produtos mais procurados!
</h5>
<table class="table">
	<tr>
		<th>#</th>
		<th>@Html.DisplayNameFor(m => m.tendencias[0].NomeProduto)</th>
		<th>@Html.DisplayNameFor(m => m.tendencias[0].UnidadesVendidas)</th>
		<th></th>
	</tr>
	@{
		n = 1;
	}
	@foreach (var m in Model.tendencias)
	{
		<tr>
			<td>
				@n
			</td>
			<td>
				@Html.DisplayFor(i => m.NomeProduto)
			</td>
			<td class="text-primary">
				@Html.DisplayFor(i => m.UnidadesVendidas)
			</td>
			<td>
				@Html.ActionLink(
						linkText: "Ir",
						actionName: "Detalhes",
						controllerName: "Produtoes",
						routeValues: new
						{
							id = m.IdProduto
						},
						htmlAttributes: new
						{
							@class = "btn btn-primary"
						})
			</td>
		</tr>
		n++;
	}
</table>
