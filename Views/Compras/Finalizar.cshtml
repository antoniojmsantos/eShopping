@model TP_PWEB.Models.Compra
@{
	ViewBag.Title = "Finalizar";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h5>Finalizar Compra</h5>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
		  
		<div class="form-group">
            @Html.LabelFor(model => model.Entrega, "Categoria", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(model => model.Entrega, null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Entrega, "", new { @class = "text-danger" })
            </div>
        </div>

		<div class="form-group">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Finalizar" class="btn btn-primary" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Voltar", "Index","Carrinho", null, new { @class = "btn btn-default" })
</div>