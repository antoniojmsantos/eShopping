                @Html.EditorFor(model => model.UnidadesEmStock, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UnidadesEmStock, "", new { @class = "text-danger" })
            </div>
        </div>

