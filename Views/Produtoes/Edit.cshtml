                <div class="checkbox">
                    @Html.EditorFor(model => model.EmStock)
                    @Html.ValidationMessageFor(model => model.EmStock, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
