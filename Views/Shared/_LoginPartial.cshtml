@using TP_PWEB.HtmlHelpers
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li  class="@Html.IsActive("Index", "Manage")">
            @Html.ActionLink("Olá, " + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Terminar sessão</a></li>
    </ul>
    }
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li class="@Html.IsActive("Register", "Account")">@Html.ActionLink("Registar", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
    <li class="@Html.IsActive("Login", "Account")">@Html.ActionLink("Iniciar sessão", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
</ul>
}
