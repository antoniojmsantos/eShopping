@model TP_PWEB.Models.ItemCarrinho
@{
	ViewBag.Title = "(" + Session["nItens"] + ") Carrinho ";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Tem a certeza que pretende remover o produto do carrinho?</h2>

<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Produto
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Produto.Nome)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<input type="hidden" name="position" value="@ViewBag.position" />

		<div class="form-actions no-color">
			<input type="submit" value="Apagar" class="btn btn-primary" />
			@Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-default" })
		</div>
	}
</div>

