@model TP_PWEB.Models.ItemCarrinho
@{
	ViewBag.Title = "(" + Session["nItens"] + ") Carrinho ";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Remover Item</h2>
<p>Tem a certeza que pretende remover o produto do carrinho?</p>
<div>
	<hr />
	<dl class="dl-horizontal">
		<dt>
			Produto
		</dt>

		<dd>
			@Html.DisplayFor(model => model.Produto.Nome)
		</dd>

	</dl>

	@using (Html.BeginForm())
	{
		@Html.AntiForgeryToken()
		<input type="hidden" name="position" value="@ViewBag.position" />

		<div class="form-actions no-color">
			<input type="submit" value="Delete" class="btn btn-primary" />
			@Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-default" })
		</div>
	}
</div>

